{
  "name": "@tylercoles/mcp-framework",
  "version": "0.2.1",
  "description": "A modular framework for building Model Context Protocol (MCP) servers",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylercoles-dev/mcp-framework.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "framework",
    "typescript"
  ],
  "author": "Tyler Coles",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:order": "node tools/build-workspaces.js",
    "test": "vitest run",
    "test:all": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "coverage:report": "node tools/coverage-report.js",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "node tools/clean-workspace.js",
    "dev": "npm run dev --workspaces --if-present",
    "typecheck": "tsc --noEmit",
    "verify": "node tools/verify-workspaces.js",
    "publish:packages": "npx ts-node --project tools/tsconfig.json tools/publish-packages.ts",
    "prebuild": "rimraf --glob packages/**/tsconfig.tsbuildinfo examples/**/tsconfig.tsbuildinfo packages/**/dist examples/**/dist",
    "ws": "npm --workspaces",
    "ws:info": "npm ls --depth=0",
    "security:audit": "node tools/security-audit.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "vitest": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
